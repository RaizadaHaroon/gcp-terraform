pipeline {

  agent any


 environment {
    SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
        sh 'mkdir -p creds' 
        sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./creds/serviceaccount.json'
      }
    }

    stage('TF Plan') {
      steps {
        
          sh '/opt/homebrew/bin/terraform init -reconfigure'
          sh '/opt/homebrew/bin/terraform plan'
        }
          
    }

   

  }  

}
